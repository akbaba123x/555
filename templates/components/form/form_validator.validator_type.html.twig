        'Group',
        '_validator_groups',
        {},
        'Group'|itemtype_name, {
            entity_restrict: '-1',
            itemtype: 'User',
            right: [ 'validate_request', 'validate_incident' ],
            multiple: true,
            valuesnames: {},
    }) }}
