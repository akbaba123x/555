{% set statuses = call('PluginFormcreatorForm_Validator::getEnumValidationStatus') %}

<table class="tab_cadre_fixehov">
<tbody>
    <tr>
        <th>{{ __('Validation level', 'formcreator') }}</th>
        <th>{{ __('Validation status', 'formcreator') }}</th>
    </tr>
    {% for itemtype in validations|keys %}
        {% for items_id, row in validations[itemtype] %}
            {% set item = get_item(itemtype, items_id) %}
            {% if not (item is null) %}
                <tr class="tab_bg_1">
                    <td>{{ row['level'] }}</td>
                    <td>{{ statuses[row['status']] }}</td>
                </tr>
            {% endif %}
        {% endfor %}
    {% endfor %}
</tbody>
</table>